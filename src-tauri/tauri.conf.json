{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Constellation",
  "version": "0.1.0",
  "identifier": "com.parkwise.constellation",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Constellation",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "resizable": true,
        "fullscreen": false,
        "label": "main"
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' http://192.168.195.33:* ws://192.168.195.33:* wss://192.168.195.33:* data: blob:; img-src 'self' data: blob: http://192.168.195.33:* https:; connect-src 'self' http://192.168.195.33:* ws://192.168.195.33:* wss://192.168.195.33:* https:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Constellation - OpenPlatform Desktop Client",
    "longDescription": "Native macOS desktop application for OpenPlatform portal",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    }
  },
  "plugins": {
    "window-state": {
      "stateFlags": ["size", "position", "visible", "decorations", "fullscreen"]
    }
  }
}
